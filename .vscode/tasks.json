{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: g++.exe 生成活动文件",
			"command": "C:\\msys64\\mingw64\\bin\\g++.exe",
			"args": [
				"${fileDirname}\\*.cpp",
				"-fdiagnostics-color=always",
				"-g",
				"-std=c++17",
				"-I./include",
				"-L./lib",
				"src/glad.c",
				"-lglfw3dll",
				"-o",
				"${workspaceFolder}\\${fileBasenameNoExtension}.exe"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: C:\\msys64\\mingw64\\bin\\g++.exe"
		}
	]
}